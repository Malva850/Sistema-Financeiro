unit ULogin;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls, Vcl.Buttons;

type
  TfrmLogin = class(TForm)
    edtLogin: TEdit;
    edtSenha: TEdit;
    Label1: TLabel;
    Label2: TLabel;
    btnEntrar: TBitBtn;
    btnSair: TBitBtn;
    procedure FormClose(Sender: TObject; var Action: TCloseAction);
    procedure btnEntrarClick(Sender: TObject);
    procedure FormCloseQuery(Sender: TObject; var CanClose: Boolean);
    procedure FormCreate(Sender: TObject);
    procedure btnSairClick(Sender: TObject);
  private
    { Private declarations }
    vAutorizado : Boolean;
  public
    { Public declarations }
  end;

var
  frmLogin: TfrmLogin;


implementation

{$R *.dfm}

uses UDM, UUsuario, UPrincipal, UCriptografia;

procedure TfrmLogin.btnEntrarClick(Sender: TObject);
var
  usuario : TUsuario;
    existe: Boolean;
  cripto: TCripografia;
begin

   if(Trim(edtLogin.Text) = '') then
  begin
     Application.MessageBox('Informe o usuário!', 'Erro!', MB_ICONERROR + MB_OK);
     Abort;
  end;

  if(Trim(edtSenha.Text) = '') then
  begin
     Application.MessageBox('Informe a senha!', 'Erro!', MB_ICONERROR + MB_OK);
     Abort;
  end;

  usuario := TUsuario.Create();

  existe := usuario.VerificarLogin(edtLogin.Text, cripto.Criptografar(edtSenha.Text));

  if(existe) then
  begin
    vAutorizado := true;
    frmLogin.Close;
  end
  else
  begin
    vAutorizado := false;
    Application.MessageBox('Usuário e/ou senha incorreto!', 'Erro!', MB_ICONERROR + MB_OK);
  end;

  {

  //select...
  if (edtLogin.Text='PROFESSOR') and (edtSenha.Text='123') then
  begin
    vAutorizado := true;

    UsuarioLogado :=  edtLogin.Text;

    usuario := TUsuario.create;
    IdUsuarioLogado  := usuario.RetornaCodigoUsuario(UsuarioLogado);
    usuario.Free;

    frmPrincipal.Caption := frmPrincipal.Caption + '  Usuário: '+ IntToStr(IdUsuarioLogado)+' - ' + UsuarioLogado;


    frmLogin.Close;
  end
  else
  begin
    vAutorizado := false;
    ShowMessage('Login ou senha inválido!');
  end;
  }
end;

procedure TfrmLogin.btnSairClick(Sender: TObject);
begin
  Application.Terminate;
end;

procedure TfrmLogin.FormClose(Sender: TObject; var Action: TCloseAction);
begin
  if vAutorizado = false then
  begin
    Application.Terminate;
  end ;

  Action := caFree;
end;

procedure TfrmLogin.FormCloseQuery(Sender: TObject; var CanClose: Boolean);
begin
  if vAutorizado = true then
  begin
    CanClose := true;
  end;
end;

procedure TfrmLogin.FormCreate(Sender: TObject);
begin
  vAutorizado := false;
end;

end.
